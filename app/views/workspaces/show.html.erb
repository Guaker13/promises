<div class='container padded'>
  <div class='row'>
    <div class='col-xs-6 col-xs-offset-3'>
      <div class='thumbnail'>
        <div class='form_box'>


        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url(<% if @workspace.pictures.empty?%>
            <%='http://www.allergiedietisten.com/wp-content/uploads/2015/08/antwerpen.jpg'  %>
            <%else  %>
            <%= work.pictures.last.photo.url %>
            <%end  %>);"></div>

            <div class="card-description-show">

              <%=@workspace.location  %>
              <p>Wifi: <%=@workspace.wifi %></p>
              <p>Price: <%=@workspace.price %> <%= @workspace.price_unit%></p>
              <p><%=@workspace.capacity%> square meters</p>
              <!-- <img class="card-user avatar" src="images/seb.jpg"> -->
            </div>
            <%= render 'unavailabilities/availabilities' %>
            <%= render 'bookings/new' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="map" style="width: 100%; height: 400px;"></div>

  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

  <script type="text/javascript">
    $(document).ready(function(){
      var myLatlng = new google.maps.LatLng(<%=@latitude %>,<%=@longitude%>);

      var myOptions = {
        zoom: 16,
        center: myLatlng,
        scrollwheel: false,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        styles: [] // TODO: replace [] by array from https://snazzymaps.com/
      };

      var map = new google.maps.Map(document.getElementById('map'), myOptions);
      var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        title: "You are here!"
      });
    });
  </script>

